<div class="form-group">
  <label for="title">Title</label>
  <input
    required
    value="<%= article.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>
<div class="form-group">
  <label for="title">Description</label>
  <textarea name="description" id="description" class="form-control">
<%= article.description %></textarea
  >
</div>
<div class="form-group">
  <label for="title">Markdown</label>
  <textarea name="markdown" id="markdown" class="form-control">
<%= article.markdown%></textarea
  >
</div>
<a href="/" class="mt-4 btn btn-secondary">Cancel</a>
<button type="submit" class="mt-4 btn btn-primary">Save</button>
